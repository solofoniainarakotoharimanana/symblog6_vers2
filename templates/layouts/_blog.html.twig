{% extends "base.html.twig" %}
{% block title %}
	{{ title}}
{% endblock %}
{% block body %}

	<div class="container mx-auto pt-20">
		<h1 class="text-center text-4xl mt-10 mb-12 text-blue-900">
			{{ title }}
		</h1>
		<div class="grid grid-cols-4 gap-4 content-start">
			<div class="col-span-3">
				<div
					class="grid gap-4 md:grid-cols-3 sm:grid-cols-2">
					<!--div class="flex flex-row flex-wrap justify-evenly mt-8"-->
					{% for post in posts %}
						{% include "components/_card.html.twig" with {post: post} only %}
					{% endfor %}
					<!--/div-->
				</div>
				<div class="navigation flex justify-center mb-10">
					{{ knp_pagination_render(posts) }}
				</div>
			</div>
			<div>
				<div class="sticky top-24">

					{% include "/components/_search_data.html.twig" with {form: form ?? null} only %}
				</div>
			</div>
		</div>
		{#<div class="flex flex-row justify-between mx-20">
													{% if allCategories is defined %}
														{% include "components/_dropdown.html.twig" with {options: allCategories} only %}
													{% endif %#}
	</div>
</div>{% endblock %}
