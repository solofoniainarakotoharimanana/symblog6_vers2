<div class="max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 my-8 mr-4">
	{% if post.thumbnail %}
		<a href="#">
			<img src="{{ vich_uploader_asset('post.thumbnail', 'imageFile') }}" alt="{{post.thumbnail.imageName}}" class="rounded-t-lg"/>
		</a>

	{% endif %}
	<div class="p-5">
		<a href="#">
			<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
				{{ post.title }}
			</h5>
		</a>
		<p class="mb-3 font-normal text-sm text-gray-700 dark:text-gray-400 ">
			{{ post.content|u.truncate(160, '...') }}
		</p>
		<a href='#' class="inline-flex items-center py-2 px-3 font-sm text-center bg-blue-800 text-white rounded-md">
			Lire plus
		</a>
	</div>
</div>
