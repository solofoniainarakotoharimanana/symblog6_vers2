{% extends "base.html.twig" %}
{% block title %}Articles{% endblock %}
{% block body %}
    <div class="container mx-auto">
        <h1 class="text-center text-4xl mt-10 mb-12 text-blue-900">
            Symblog le blog crée de A à Z
        </h1>
        <div class="flex flex-row flex-wrap justify-evenly mt-8">
            {% for post in posts %}
                <div class="max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 my-8 mr-4">
                    {% if post.thumbnail %}
                        <a href="#">
                            <img 
                                src="{{ vich_uploader_asset('post.thumbnail', 'imageFile') }}" 
                                alt="{{post.thumbnail.imageName}}" class="rounded-t-lg"/>
                        </a>
                        
                    {% endif %}
                    <div class="p-5">
                        <a href="#">
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                                {{ post.title }}
                            </h5>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}